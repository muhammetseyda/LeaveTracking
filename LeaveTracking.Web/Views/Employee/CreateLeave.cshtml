@using LeaveTracking.Application.DTOs.LeaveRequestDTOs
@model CreateLeaveRequestDto
@{
    ViewBag.Title = "Yeni İzin Talebi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Yeni İzin Talebi Oluştur</h2>
        <p class="text-muted">İzin talebinizi oluşturun ve onaya gönderin</p>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Başarılı!</strong> @ViewBag.Success
                <a href="/employee/leaverequest" class="btn btn-success">
                    Taleplerime Git
                </a>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Hata!</strong> @ViewBag.Error
            </div>
        }

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">İzin Bilgileri</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateLeaveRequest" asp-controller="Employee" method="post" onsubmit="handleSubmit(this)">
                    @Html.AntiForgeryToken()

                    <input asp-for="UserId" type="hidden" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LeaveType" class="form-label">
                                    <strong>İzin Türü</strong> <span class="text-danger">*</span>
                                </label>
                                <select asp-for="LeaveType" class="form-control" required>
                                    <option value="">İzin türünü seçiniz</option>
                                    <option value="1">Yıllık İzin</option>
                                    <option value="2">Hastalık İzni</option>
                                    <option value="3">Doğum İzni</option>
                                    <option value="4">Ölüm İzni</option>
                                    <option value="5">Evlilik İzni</option>
                                </select>
                                <span asp-validation-for="LeaveType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <strong>İzin Süresi</strong>
                                </label>
                                <input type="text" id="leaveDuration" class="form-control" readonly
                                       placeholder="Tarih seçtikten sonra hesaplanacak" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StartDate" class="form-label">
                                    <strong>Başlangıç Tarihi</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control"
                                       id="startDate" required onchange="calculateDuration()" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EndDate" class="form-label">
                                    <strong>Bitiş Tarihi</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control"
                                       id="endDate" required onchange="calculateDuration()" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <strong>Açıklama</strong> <span class="text-muted">(İsteğe bağlı)</span>
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="İzin talebinizle ilgili ek bilgi verebilirsiniz..."></textarea>
                        <small class="form-text text-muted">
                            İzin sebebinizi veya özel durumunuzu açıklayabilirsiniz.
                        </small>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-lg btn-block">
                                    İzin Talebini Gönder
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary btn-lg btn-block">
                                    İptal Et
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">İzin Türleri Hakkında</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">Yıllık İzin</h6>
                    <small class="text-muted">
                        Yasal olarak size tanınan yıllık izin hakkınızdan kullanım
                    </small>
                </div>
                <div class="mb-3">
                    <h6 class="text-warning">Hastalık İzni</h6>
                    <small class="text-muted">
                        Sağlık problemleri nedeniyle alınan izin
                    </small>
                </div>
                <div class="mb-3">
                    <h6 class="text-pink">Doğum İzni</h6>
                    <small class="text-muted">
                        Hamilelik ve doğum sürecinde verilen yasal izin
                    </small>
                </div>
                <div class="mb-3">
                    <h6 class="text-secondary">Ölüm İzni</h6>
                    <small class="text-muted">
                        Yakın akraba kaybı durumunda verilen kısa süreli izin
                    </small>
                </div>
                <div class="mb-3">
                    <h6 class="text-success">Evlilik İzni</h6>
                    <small class="text-muted">
                        Evlilik durumunda verilen resmi izin hakkı
                    </small>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">Önemli Notlar</h6>
            </div>
            <div class="card-body">
                <ul class="small">
                    <li>İzin talepleri yöneticiniz tarafından onaylanmalıdır</li>
                    <li>Hastalık izni için rapor gerekebilir</li>
                    <li>Yıllık izin bakiyenizi kontrol edin</li>
                    <li>Acil durumlar dışında en az 3 gün önceden talep oluşturun</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    function calculateDuration() {
        var startDate = document.getElementById('startDate').value;
        var endDate = document.getElementById('endDate').value;
        var durationField = document.getElementById('leaveDuration');

        if (startDate && endDate) {
            var start = new Date(startDate);
            var end = new Date(endDate);

            if (end >= start) {
                var workingDays = 0;
                var currentDate = new Date(start);

                while (currentDate <= end) {
                    var day = currentDate.getDay();
                    if (day !== 0 && day !== 6) {
                        workingDays++;
                    }
                    currentDate.setDate(currentDate.getDate() + 1);
                }

                durationField.value = workingDays + ' gün';
                durationField.className = 'form-control text-success font-weight-bold';
            } else {
                durationField.value = 'Geçersiz tarih aralığı';
                durationField.className = 'form-control text-danger';
            }
        } else {
            durationField.value = '';
            durationField.className = 'form-control';
        }
    }


    document.getElementById('startDate').addEventListener('change', function() {
        document.getElementById('endDate').setAttribute('min', this.value);
        calculateDuration();
    });
</script>
<script>
    function handleSubmit(form) {
        const btn = form.querySelector("button[type='submit']");
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Gönderiliyor...';
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}